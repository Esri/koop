{
  "name": "@koopjs/logger",
  "version": "5.0.0",
  "description": "A shared logger for Koop",
  "main": "src/index.js",
  "scripts": {
    "test": "tape src/**/*.spec.js | tap-spec",
    "test:cov": "nyc -r=json-summary tape './src/**/*.spec.js' | tap-spec && npm run cov:badge",
    "test:cov:unit": "nyc -r=json-summary --report-dir=coverage_unit --temp-dir=.nyc_output_unit tape 'src/**/*.spec.js' | tap-spec && npm run cov:badge:unit",
    "cov:badge": "coverage-badges-cli --output ./coverage.svg",
    "cov:badge:unit": "coverage-badges-cli --source coverage_unit/coverage-summary.json --output ./coverage-unit.svg"
  },
  "repository": {
    "type": "git",
    "url": "https://www.github.com/koopjs/koop.git"
  },
  "keywords": [
    "koop",
    "logging"
  ],
  "contributors": [
    {
      "name": "Rich Gwozdz",
      "email": "rgwozdz@esri.com"
    },
    {
      "name": "Daniel Fenton"
    }
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "tap-spec": "^5.0.0",
    "tape": "^5.0.1"
  },
  "files": [
    "src/**/*.js",
    "index.d.ts",
    "!**/*.spec.js"
  ],
  "bugs": {
    "url": "https://github.com/koopjs/koop/issues"
  },
  "homepage": "https://github.com/koopjs/koop#readme"
}
